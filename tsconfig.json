{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "esnext",
        "lib": ["es6"],
        "noImplicitReturns": false,
        "noImplicitAny": true,
        "declaration": true,
        "declarationDir": "./dist",
        "outDir": "./dist",
        "sourceMap": true
    },
    "typedocOptions": {
        "mode": "modules",
        "out": "docs"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules/*",
        "src/tests/*"
    ]
}