{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "esnext",
        "lib": ["es6"],
        "noImplicitReturns": false,
        "noImplicitAny": true,
        "declaration": true,
        "declarationDir": "dist",
        "declarationMap": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules/*",
        "src/tests/*"
    ]
}